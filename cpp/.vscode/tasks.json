{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "clean",
            "command": "",
            "linux": {
                "command": "rm",
                "args": [
                    "-rf",
                    "build"
                ]
            },
            "windows": {
                "command": "cmd",
                "args": [
                    "/C rmdir /S /Q .\\build"
                ]
            }
        },
        {
            "label": "create_build_directory",
            "command": "",
            "linux": {
                "command": "mkdir",
                "args": [
                    "-p",
                    "build"
                ]
            },
            "windows": {
                "command": "cmd",
                "args": [
                    "/C if not exist build mkdir build"
                ]
            }
        },
        {
            "label": "cmake_generate",
            "command": "cmake",
            "args": [
                "-DCMAKE_BUILD_TYPE=Debug",
                ".."
            ],
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "dependsOn": [
                "create_build_directory"
            ]
        },
        {
            "label": "cmake_build",
            "command": "cmake",
            "args": [
                "--build",
                "."
            ],
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "cmake_generate"
            ],
            "problemMatcher": []
        },
        {
            "label": "cmake_test",
            "command": "ctest",
            "args": [
                "-VV"
            ],
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}
